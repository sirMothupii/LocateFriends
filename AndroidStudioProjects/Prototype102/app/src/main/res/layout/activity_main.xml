<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.mothupii_.prototype102.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:background="?android:attr/textColorPrimaryInverse"
        android:duplicateParentState="false"
        android:filterTouchesWhenObscured="false"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-14dp">

        <EditText

            android:id="@+id/editTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTxtPassworsd"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="58dp"
            android:background="@drawable/button_background"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorHint"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:text="Username" />

        <EditText
            android:id="@+id/editTxtPassworsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignStart="@+id/editTxtName"
            android:layout_marginBottom="27dp"
            android:background="@drawable/button_background"
            android:ems="10"
            android:hint="Password"
            android:textAllCaps="false"
            android:textColor="?android:attr/textColorHint"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:text="Password" />

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/editTxtPassworsd"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/editTxtPassworsd"
            android:layout_marginBottom="49dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/login"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorHint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="The Netword Hub"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtRegLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/textview"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            tools:text="Not a member Click here to Register" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/download" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
